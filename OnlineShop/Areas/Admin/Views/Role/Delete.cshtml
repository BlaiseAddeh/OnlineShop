@{
    ViewData["Title"] = "Delete";
}
<br />
<h2 class="text-info">Delete User</h2>
<form id="role-form" asp-action="Delete" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
        <h3 class="text-danger">Do you want to delete this role?</h3>
        <div class="form-group row">
            <div class="col-2"> <label>Role Name</label> </div>

            <input type="hidden" value="@ViewBag.id" name="id" />

            <div class="col-5">
                <input id="name" readonly="readonly" name="name" value="@ViewBag.name" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Delete" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial"); }

    <script>
    $(document).ready(function() {
          $("#role-form").validate({
            rules: {
              name : {
                required: true,
				  }
			  },
              messages: {
					  name: "Vous devez saisir un rôle",
				  }
          });
        });
    </script>
}

