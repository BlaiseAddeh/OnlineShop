@using OnlineShop.Models;
@model IEnumerable<SpecialTags>
@{
	ViewData["Title"] = "Index";
}


<br />
<br />
<div class="row">
	<div class="col-6">
		<h2 class="text-info">Special Tags List</h2>
	</div>
	<div class="col-6 text-right">
		<a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i> New Special Tag</a>
	</div>
</div>
<br />
<div>
	<table class="table table-striped border">
		<tr class="table-info">
			<th>
				@Html.DisplayNameFor(expression: c => c.SpecialTag)
			</th>
			<th></th>
			<th></th>
		</tr>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.SpecialTag</td>
				<td>
					<partial name="_BtnSpecialTagPartial" model="@item.Id" />
				</td>
			</tr>
		}
	</table>
</div>

@section scripts{
	<script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>

	<script type="text/javascript">
		$(function () {
			debugger;
			var save = '@TempData["save"]'
			if (save !=null && save !='') {
				alertify.success(save);
			}

			var edit = '@TempData["edit"]'
			if (edit !=null && edit !='') {
				alertify.success(edit);
			}

			var deleted = '@TempData["delete"]'
			if (deleted !=null && deleted !='') {
				alertify.error(deleted);
			}

		})
	</script>
}



